# Inbox Zero Self-Hosted Configuration
# Copy this to .env and fill in your values

# ===========================================
# DATABASE (auto-configured with docker-compose)
# ===========================================
DATABASE_URL="postgresql://inbox:changeme@postgres:5432/inbox_zero?schema=public"
DIRECT_URL="postgresql://inbox:changeme@postgres:5432/inbox_zero?schema=public"
POSTGRES_PASSWORD="changeme"

# ===========================================
# REDIS (auto-configured with docker-compose)
# ===========================================
REDIS_URL="redis://redis:6379"

# ===========================================
# APP CONFIGURATION
# ===========================================
NEXTAUTH_URL="https://inbox.donaldscott.com:444"
NEXT_PUBLIC_BASE_URL="https://inbox.donaldscott.com:444"

# Generate with: openssl rand -base64 32
AUTH_SECRET="GENERATE_ME_openssl_rand_base64_32"
BETTER_AUTH_SECRET="GENERATE_ME_openssl_rand_base64_32"

# ===========================================
# GOOGLE OAUTH (Required)
# Get from: https://console.cloud.google.com/apis/credentials
# ===========================================
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"

# ===========================================
# GOOGLE CLOUD PUB/SUB (Required for real-time)
# ===========================================
GOOGLE_PUBSUB_TOPIC_NAME="projects/your-project/topics/inbox-zero-topic"
GOOGLE_PUBSUB_VERIFICATION_TOKEN="GENERATE_ME_random_token"

# ===========================================
# ENCRYPTION (Required)
# Generate with: openssl rand -hex 16
# ===========================================
EMAIL_ENCRYPT_SECRET="GENERATE_ME_openssl_rand_hex_16"
EMAIL_ENCRYPT_SALT="GENERATE_ME_openssl_rand_hex_16"

# ===========================================
# API SECURITY
# ===========================================
INTERNAL_API_KEY="GENERATE_ME_random_api_key"
API_KEY_SALT="GENERATE_ME_random_salt"

# ===========================================
# AI PROVIDER (Choose one)
# ===========================================
# OpenAI
OPENAI_API_KEY="sk-..."

# OR Anthropic
# ANTHROPIC_API_KEY="sk-ant-..."

# OR Google AI
# GOOGLE_AI_API_KEY="..."

# ===========================================
# OPTIONAL SERVICES
# ===========================================
# Sentry error tracking
# SENTRY_DSN=""
# NEXT_PUBLIC_SENTRY_DSN=""

# PostHog analytics
# NEXT_PUBLIC_POSTHOG_KEY=""
# NEXT_PUBLIC_POSTHOG_ONBOARDING_SURVEY_ID=""

# Resend for transactional emails
# RESEND_API_KEY=""

# Loops for marketing emails  
# LOOPS_API_SECRET=""
